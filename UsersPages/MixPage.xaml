                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0 5"
                                          Background="LightGray">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Image Width="45"
                                               Height="45"
                                               Margin="5"
                                               Source="../Images/icon.png"/>
                            <StackPanel Grid.Column="1">
                                <Label Margin="0 0 0 5"
                                                   Content="{Binding Name}"
                                                   FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal">
                                    <Label Margin="0 0 50 0"
                                                       Content="{Binding Weight}"
                                                       ContentStringFormat="{}{0}г." />
                                    <Label Content="{Binding Price}"
                                                       ContentStringFormat="{}{0}р." />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="2"
                                                    Margin="10 0"
                                                    Orientation="Horizontal">
                                <CheckBox x:Name="HasInPizza"
                                                      VerticalAlignment="Center"
                                                      IsEnabled="False"
                                                      IsChecked="{Binding HasInPizza}"/>
                                <Button Margin="5 0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Click="RemoveFromPizza"
                                                    Style="{StaticResource RedButton}"
                                                    Content="Убрать"/>
                                <Button HorizontalAlignment="Right"
                                                    Style="{StaticResource RedButton}"
                                                    VerticalAlignment="Center"
                                                    Click="AddToPizza"
                                                    Content="Добавить" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel Grid.Row="1"
                        Margin="15 0"
                        Grid.Column="1">
                <Label x:Name="DishPrice"
                       ContentStringFormat="{}Цена: {0}р."/>
                <Label x:Name="DishWeight"
                       ContentStringFormat="{}Вес: {0}р."/>
                <Label Content="Размер:"/>
                <RadioButton Content="23см"
                             IsChecked="True"
                             Click="ChangeSize"
                             x:Name="Size23cm"
                             Margin="0 5"/>
                <RadioButton Content="30см"
                             Click="ChangeSize"
                             x:Name="Size30cm"
                             Margin="0 5"/>
                <RadioButton Content="40см"
                             Click="ChangeSize"
                             x:Name="Size40cm"
                             Margin="0 5"/>
            </StackPanel>
        </Grid>
        
	</Grid>
</Page>
