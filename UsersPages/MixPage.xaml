<Page x:Class="PizzaFinalApp.UsersPages.MixPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzaFinalApp.UsersPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MixPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid Background="#ffdd3333">
            <Image Source="../Images/icon(white).png"
                   Width="60"
                   Height="60"
                   HorizontalAlignment="Left"/>

            <Label Content="Микс X" 
                   Foreground="White"
                   VerticalAlignment="Center" 
                   FontSize="20" 
                   Margin="70,0,0,0"
                   FontWeight="Bold"/>
            <Button Click="OpenMenu" 
                    Content="Меню"
                    Height="25" 
                    Width="105"
                    HorizontalAlignment="Right"
                    Style="{StaticResource WhiteButton}"
                    Margin="0,0,25,0" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Margin="15 5"
                     Height="23"/>
            <Button Grid.Column="1"
                    Style="{StaticResource RedButton}"
                    Content="Добавить"
                    Height="25"
                    Width="135"
                    Click="AddDish"/>
            <ListView Grid.Column="0"
                      x:Name="IngredientListView"
                      Grid.Row="1">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <!--<ListView.ItemTemplate>
					<DataTemplate>-->
				<ListView.ItemTemplate>
					<DataTemplate>
						<Grid Height="45"
                              Margin="5"
							  Grid.Row="1" 
                              Grid.Column="0"
                              Background="#ffe5e5e5">
							<Image Source="../Images/icon.png"
                                   HorizontalAlignment="Left"
                                   Margin="3"/>
                            <Label Content="{Binding Name}"
                                   FontWeight="Bold"	
                                   Margin="40 0 0 0"/>
                            <Label Content="{Binding Weight}"
                                   ContentStringFormat="{}{0}гр."
                                   Margin="40 15 0 0"/>
							<Label Content="{Binding Price}"
                                   ContentStringFormat="{}{0}р."
                                   Margin="145 15 0 0"/>
							<Button Style="{StaticResource RedButton}"
                                    Width="30"
                                    HorizontalAlignment="Right"
                                    Margin="15 0"
                                    Height="25"
                                    Content="+"/>
							<TextBox Width="80"			
                                     HorizontalAlignment="Right"
                                     Margin="50 0"
                                     Text="{Binding Amount}"
                                     Height="23"/>
							<Button Style="{StaticResource RedButton}"
                                    Width="30"
                                    HorizontalAlignment="Right"
                                    Margin="135 0"
                                    Height="25"
                                    Content="-"/>
						</Grid>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

		</Grid>
	</Grid>
</Page>
