<Application x:Class="PizzaFinalApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PizzaFinalApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button" x:Key="WhiteButton">
            <Setter Property="BorderBrush" Value="#ffdd3333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#ffdd3333"/>
        </Style>

        <Style TargetType="Button" x:Key="RedButton">
            <Setter Property="BorderBrush" Value="#ffdd3333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#ffdd3333"/>
        </Style>

        <Style TargetType="TextBox" x:Key="RedTextBox">
            <Setter Property="Foreground" Value="#ffdd3333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
